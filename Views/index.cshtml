<html>
  <head>
    <link href="../Content/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="../Content/styles.css" rel="stylesheet" type="text/css">
    <script src="../Content/jquery-3.1.1.js"></script>
    <title>Address book</title>
  </head>
  <body>
    <div class="container">
      <h1>Address Book</h1>
      <br>
      <div>
        @if (@Model.Count == 0)
        {
          <h3>You don't have any contacts</h3>
        }
        @if (@Model.Count >=1)
        {
          <h3>All Contacts</h3>
        }
        <ul>
          @foreach (var contact in Model)
          {
            <li><a href='Contact_details/@contact.GetId()'>@contact.GetName()</a></li>
          }
        </ul>
      </div>
      <br>
      <h4><a href="/contact_form">Add a contact here.</a></h4>
      <h4><a href="/view_all_contacts">View all contacts here.</a></h4>
      <br>
      <form action="/contacts_cleared" method="post">
        <div class="form-group">
          <p>To clear all contacts, click here.</p>
          <button type="submit" name="button" class="btn btn-danger">Clear all contacts now!</button>
        </div>
      </form>
    </div>
  </body>
</html>
